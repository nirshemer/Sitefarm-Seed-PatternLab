<a href="{{ url }}" class="marketing-highlight {{ brandClass }} {{ styleModifier }}">
  <div class="marketing-highlight__image">
    {{> atoms-landscape-4x3 }}
  </div>
  <div class="marketing-highlight__body">
    {{# highlightLabel }}
      <h3 class="marketing-highlight__type category-brand__text--knock-out"><span>{{ highlightLabel }}</span></h3>
    {{/ highlightLabel }}
      <h3 class="marketing-highlight__title category-brand__text">{{ headline.short }}</h3>
    {{# highlight-content }}
      <p>{{{ excerpt.short }}}</p>
    {{/ highlight-content }}
    {{# ctaText }}
      <span class="marketing-highlight__cta category-brand__arrow">{{ ctaText }}</span>
    {{/ctaText}}
  </div>
</a>
