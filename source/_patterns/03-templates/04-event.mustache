<div class="l-page">
  {{> organisms-header }}
  <main class="l-main">

    <div class="l-container">
      {{> organisms-page-title }}
      {{> molecules-breadcrumbs }}
    </div>

    <div class="l-container l-basic">

      <div class="l-content">
        <div class="panel o-box">
          <!-- Featured Image -->
          <div class="u-space-bottom--large">
            {{> atoms-landscape-16x9 }}
          </div>
          <!-- Event date -->
          <h2>{{ event.date }} @ {{ event.time }}</h2>
          <div>
            <span class="icon">{{ location }}</span>
          </div>
          <div>
            <a class="icon" href="{{ url }}">Map to Event</a>
          </div>
          <div>
            <a class="icon" href="{{ url }}">{{ addToCalendar }}</a>
          </div>

          {{> molecules-social-share }}

          <div class="u-clearfix">
            {{> organisms-event-body }}
          </div>

          <h2 class="heading--auxiliary">Documents</h2>
          {{> atoms-list-download }}

          {{# singleCategory }}
            <h2 class="heading--auxiliary">Category</h2>
            <div class="u-clearfix">
              {{> molecules-tags }}
            </div>
          {{/ singleCategory }}

          <h2 class="heading--auxiliary">Tags</h2>
          {{> molecules-tags }}

        </div>
      </div><!--end .l-content-->

      <div class="l-sidebar">
        <div class="panel o-box">
          <h2 class="panel__title">People</h2>
          {{# peopleListShort }}
            {{> molecules-listing }}
          {{/ peopleListShort }}
        </div>
        <div class="panel o-box">
          <h2 class="panel__title">Upcoming Events</h2>
          {{> organisms-event-list }}
        </div>
        <div class="panel o-box">
          <h2 class="panel__title">Categories</h2>
          {{> molecules-category-filter }}
        </div>
      </div><!--end .l-sidebar-second-->

    </div><!--End .l-container-->

  </main><!--End role=main-->
  {{> organisms-footer }}
</div>
