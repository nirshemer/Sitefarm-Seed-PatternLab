<div class="l-page">
  {{> organisms-header }}
  <main class="l-main">

    <div class="l-container">
      {{> organisms-page-title }}
      {{> molecules-breadcrumbs }}
    </div>

    <div class="l-container l-basic">

      <div class="l-sidebar">
        <div class="panel o-box">
          {{> organisms-filter-people-results }}
        </div>
      </div>

      <div class="l-content">
        <div class="panel o-box">
          {{# peopleGroups }}
            <h2>{{ peopleGroupTitle }}</h2>
            {{# peopleList }}
              {{> molecules-teaser:vm-teaser--grouped }}
            {{/ peopleList }}
          {{/peopleGroups}}
        </div>
      </div>

    </div>
  </main>
  {{> organisms-footer }}
</div>
